/* components/main/main.wxss */

.container {
 height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #ffffff;
} 
.container .article-content{
  display: flex;
  flex-direction: column;
  padding: 20rpx 10rpx 0 10rpx;
  width: 100%;
  height: calc(100vh - 50rpx);
  box-sizing: border-box;
}
.container .article-content .item{
  width: 100%;
  display: flex;
  height: 100rpx;
  overflow: hidden;  
  padding: 10rpx 0;
  align-items: center;
}

.container .article-content image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
}



.container .article-content .tab{
  width: 100rpx;
  display: inline-flex;  
  align-items: center;
  justify-content: center;
  height: 70%;  
  margin: 0 20rpx;
  color: #999;
  background: #e5e5e5;
  font-size: 14px;
}


.container .article-content  .main{
  width: calc(100% - 240rpx);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100%;  
  font-size: 14px;
  padding: 0rpx 0;
  justify-content: space-between;
}
.container .article-content  .title{
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}
.container .article-content .main view{
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  color: #b4b4b4;
}
